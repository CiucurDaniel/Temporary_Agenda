<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddEditContactActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:src="@drawable/person_icon" />
    <!-- Name -->
    <EditText
        android:id="@+id/edit_text_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:textAlignment="center">

    </EditText>

    <!-- Phone number-->
    <EditText
        android:id="@+id/edit_text_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone Number"
        android:inputType="phone"
        android:textAlignment="center">

    </EditText>

    <!-- TAG -->
    <EditText
        android:id="@+id/edit_text_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:inputType="text"
        android:textAlignment="center">

    </EditText>

    <!-- Edit text e-mail-->
    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"/>

    <!-- Description -->
    <EditText
        android:id="@+id/edit_text_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Description about the contact"
        android:inputType="text"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/edit_text_deletion_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Contact will be deleted on:"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:textColor="@android:color/holo_red_light"/>

    <!-- Calendar for delete date-->
    <CalendarView
        android:id="@+id/calendar_delete"
        android:layout_width="252dp"
        android:layout_height="267dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" />

</LinearLayout>